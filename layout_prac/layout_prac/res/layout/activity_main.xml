<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/bottom_l"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:onClick="ClickHandler"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/seven"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/four"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/one"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/eight"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/nine"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/ans"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ANS"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/plus"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp" />

            <Button
                android:id="@+id/mul"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="X"
                android:textSize="30dp" />

            <Button
                android:id="@+id/div"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/addlist_1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                
                android:text="목록추가"
                android:textSize="15dp" />

            <Button
                android:id="@+id/del"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="DEL/C"
                android:textSize="15dp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="="
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_l"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_l"
        android:layout_alignLeft="@+id/bottom_l"
        android:layout_margin="1dp"
        android:orientation="vertical" >

         <EditText
             android:id="@+id/textmain"
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="3.7"
             android:ems="10"
             android:gravity="top"
             android:hint="목록이 비어있습니다" />

        <LinearLayout
            
            android:id="@+id/exp_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:text="지출" />

            <LinearLayout
                android:id="@+id/exp_textname"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:orientation="vertical" >

                <AutoCompleteTextView
                    android:id="@+id/textname"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="right|center_horizontal"
                    android:hint="텍스트 입력"
                    android:lines="1"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:singleLine="true"
                     >

                    <requestFocus />
                </AutoCompleteTextView>
                
                <EditText
                    android:id="@+id/textexpression"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center_horizontal"
                    android:hint="식 입력"
                     />
            </LinearLayout>

            

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/alldelete"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="전체삭제"
                android:textSize="10dp" />

            <Button
                android:id="@+id/allcopy"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="전체복사"
                android:textSize="10dp" />

            <Button
                android:id="@+id/linedelete"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="한줄삭제"
                android:textSize="10dp" />

            <Button
                android:id="@+id/send_1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="전송"
                android:textSize="10dp"
                android:onClick="onPopupButtonClick" />

            <Button
                android:id="@+id/keypad"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="자판"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>