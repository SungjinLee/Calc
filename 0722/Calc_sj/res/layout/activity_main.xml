<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:visibility="visible"
	tools:context=".MainActivity" >
	

    <Button
        android:id="@+id/dot"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ans"
        android:text="."
        android:textSize="40sp" />

    <Button
    	android:id="@+id/one"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/zero"
    	android:text="1"
    	android:textSize="36sp" />

    <Button
    	android:id="@+id/two"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/dot"
    	android:layout_toRightOf="@+id/one"
    	android:text="2"
    	android:textSize="36sp" />

    <Button
    	android:id="@+id/three"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/dot"
    	android:layout_toRightOf="@+id/dot"
    	android:text="3"
    	android:textSize="36sp" />

    <Button
        android:id="@+id/mul"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_above="@+id/div"
        android:layout_toRightOf="@+id/ans"
        android:text="x"
        android:textSize="40sp" />

    <Button
    	android:id="@+id/four"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/one"
    	android:layout_alignLeft="@+id/one"
    	android:text="4"
    	android:textSize="36sp" />

    <Button
    	android:id="@+id/seven"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/four"
    	android:layout_alignLeft="@+id/four"
    	android:text="7"
    	android:textSize="36sp" />

    <Button
    	android:id="@+id/five"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_below="@+id/seven"
    	android:layout_toRightOf="@+id/four"
    	android:text="5"
    	android:textSize="36sp" />

    <Button
    	android:id="@+id/six"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_below="@+id/eight"
    	android:layout_toLeftOf="@+id/mul"
    	android:text="6"
    	android:textSize="36sp" />

    <Button
        android:id="@+id/minus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_below="@+id/nine"
        android:layout_toLeftOf="@+id/equal"
        android:gravity="top|center_horizontal"
        android:text="-"
        android:textSize="40sp" />

    <Button
        android:id="@+id/plus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/six"
        android:text="+"
        android:textSize="40sp" />

    <Button
        android:id="@+id/send"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_above="@+id/del"
        android:layout_alignParentRight="true"
        android:text="전송"
        android:textSize="16sp" />

    <Button
    	android:id="@+id/del"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/equal"
    	android:layout_alignParentRight="true"
    	android:longClickable="false"
    	android:text="Del / C"
    	android:textSize="16sp" />

    <Button
        android:id="@+id/allcopy"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_above="@+id/seven"
        android:layout_toLeftOf="@+id/eight"
        android:text="전체복사"
        android:textSize="8sp" />

    <Button
        android:id="@+id/alldelete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_above="@+id/seven"
        android:layout_toRightOf="@+id/seven"
        android:text="전체삭제"
        android:textSize="8sp" />

    <Button
        android:id="@+id/linedelete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_above="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:text="한줄삭제"
        android:textSize="8sp" />

    <Button
    	android:id="@+id/keypad"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="30dp"
    	android:layout_above="@+id/send"
    	android:layout_alignLeft="@+id/send"
    	android:text="자판"
    	android:textSize="10sp" />

    <Button
    	android:id="@+id/eight"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_below="@+id/allcopy"
    	android:layout_toRightOf="@+id/seven"
    	android:text="8"
    	android:textSize="36sp" />

    <Button
    	android:id="@+id/zero"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_alignTop="@+id/dot"
    	android:layout_toLeftOf="@+id/dot"
    	android:text="0"
    	android:textSize="36sp" />

    <Button
        android:id="@+id/ans"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_alignTop="@+id/dot"
        android:layout_toLeftOf="@+id/minus"
        android:text="ANS"
        android:textSize="17sp" />

    <Button
        android:id="@+id/div"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="57.4dp"
        android:layout_below="@+id/three"
        android:layout_toLeftOf="@+id/equal"
        android:text="÷"
        android:textSize="40sp" />

    <Button
        android:id="@+id/equal"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="57dp"
        android:layout_height="116dp"
        android:layout_alignLeft="@+id/del"
        android:layout_below="@+id/minus"
        android:text="="
        android:textSize="40sp" />

    <Button
    	android:id="@+id/nine"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="57.4dp"
    	android:layout_above="@+id/six"
    	android:layout_toLeftOf="@+id/minus"
    	android:text="9"
    	android:textSize="36sp" />
       




    <Button
    	android:id="@+id/addlist"
    	style="?android:attr/buttonStyleSmall"
    	android:layout_width="57dp"
    	android:layout_height="30dp"
    	android:layout_above="@+id/plus"
    	android:layout_toLeftOf="@+id/send"
    	android:text="목록추가"
    	android:textSize="8sp" />


    <EditText
    	android:id="@+id/textexpression"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_above="@+id/allcopy"
    	android:layout_alignRight="@+id/keypad"
    	android:ems="10"
    	android:focusable="false"
    	android:focusableInTouchMode="false"
    	android:gravity="right|center_horizontal"
    	android:hint="식 입력"
    	android:textSize="18sp" />
    	
 	
    		
   
     <EditText
     	android:id="@+id/textmain"
     	android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:layout_above="@+id/textname"
     	android:layout_alignParentTop="true"
     	android:layout_alignRight="@+id/textname"
     	android:ems="10"
     	android:gravity="top|left"
     	android:hint="목록이 비어있습니다."
     	android:textSize="16sp" />

        
        
    <EditText
    	android:id="@+id/textname"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_above="@+id/textexpression"
    	android:layout_alignLeft="@+id/textexpression"
    	android:ems="10"
    	android:gravity="right|center_vertical"
    	android:hint="텍스트 입력"
    	android:maxLength="20"
    	android:singleLine="true"
    	android:textSize="18sp" >
	<requestFocus />
	</EditText>

    </RelativeLayout>
